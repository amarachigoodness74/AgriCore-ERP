generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Employee {
  id                String    @id @default(auto()) @map("_id") @db.ObjectId
  name              String
  email             String    @unique
  phone             String
  gender            String
  address           Address
  department        String
  role              String
  password          String?
  mustResetPassword Boolean
  isActive          Boolean
  resetToken        String?
  resetTokenExpiry  DateTime?
  createdBy         String
  updatedBy         String
}

type Address {
  streetNo Int
  street   String
  town     String
  state    String
  country  String
}

model UserRole {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  role  String
  value String
}
